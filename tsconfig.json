{
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "exclude": [
    "**/src/**/*.test.ts",
    "**/src/**/*.test.utils.ts",
    "**/src/**/*.spec.ts",
    "**/src/**/*.mock.ts",
    "**/vitest.config.ts",
    "**/vitest.setup.ts"
  ]
}
