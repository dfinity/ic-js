{
  "$schema": "https://typedoc-plugin-markdown.org/schema.json",
  "entryPoints": [
    "../packages/ckbtc/src/index.ts",
    "../packages/cketh/src/index.ts",
    "../packages/cmc/src/index.ts",
    "../packages/ic-management/src/index.ts",
    "../packages/ledger-icp/src/index.ts",
    "../packages/ledger-icrc/src/index.ts",
    "../packages/nns/src/index.ts"
  ],
  "tsconfig": "../tsconfig.json",
  "readme": "none",
  "out": "src/content/tmp",
  "plugin": [
    "typedoc-plugin-markdown",
    "typedoc-plugin-frontmatter",
    "@dfinity/typedoc-plugin-icp-docs"
  ],
  "outputs": [
    { "name": "markdown", "path": "src/content/tmp" },
    { "name": "icp-docs", "path": "src/content/docs" }
  ],
  "projectDocuments": ["../CHANGELOG.md"],
  "entryFileName": "index",
  "hidePageTitle": true,
  "hideBreadcrumbs": true,
  "hidePageHeader": true,
  "frontmatterGlobals": {
    "editUrl": false,
    "next": true,
    "prev": true
  },
  "readmeFrontmatter": {
    "editUrl": false,
    "next": true,
    "prev": true
  },
  "indexFrontmatter": {},
  "frontmatterNamingConvention": "camelCase"
}
