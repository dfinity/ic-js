{
  "root": true,
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["./tsconfig.json"]
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": [
    "dist/",
    "candid/",
    "*.did.js",
    "*_pb.d.ts",
    "jest.config.js",
    "test-setup.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.mock.ts"
  ]
}
