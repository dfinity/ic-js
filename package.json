{
  "name": "@dfinity/nns",
  "version": "0.5.0",
  "description": "A library for interfacing with the Internet Computer's Network Nervous System.",
  "license": "Apache-2.0",
  "main": "dist/cjs/index.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "rmdir": "node ./scripts/rmdir.mjs",
    "ts-declaration": "tsc --emitDeclarationOnly --outDir dist/types",
    "did": "scripts/compile-idl-js",
    "build": "npm run rmdir && mkdir -p dist && cp -R proto candid dist && node esbuild.mjs && npm run ts-declaration",
    "test": "jest",
    "doc": "typedoc ./src/index.ts",
    "lint": "eslint --max-warnings 0 .",
    "format": "prettier --write .",
    "prepare": "npm run build",
    "protoc": "bash ./scripts/update_proto.sh"
  },
  "dependencies": {
    "@dfinity/agent": "^0.11.3",
    "@dfinity/candid": "^0.11.3",
    "@dfinity/principal": "^0.11.3",
    "crc": "^4.1.1",
    "crc-32": "^1.2.2",
    "google-protobuf": "^3.20.1",
    "js-sha256": "^0.9.0",
    "randombytes": "^2.1.0"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.15.6",
    "@types/jest": "^27.5.0",
    "@types/randombytes": "^2.0.0",
    "@types/text-encoding": "^0.0.36",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "esbuild": "^0.14.38",
    "eslint": "^8.15.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^28.1.0",
    "jest-mock-extended": "^2.0.6",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "text-encoding": "^0.7.0",
    "ts-jest": "^28.0.2",
    "ts-protoc-gen": "^0.15.0",
    "typedoc": "^0.22.15",
    "typescript": "^4.5.5",
    "whatwg-fetch": "^3.6.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dfinity/nns-js.git"
  },
  "bugs": {
    "url": "https://github.com/dfinity/nns-js"
  },
  "keywords": [
    "internet computer",
    "internet-computer",
    "ic",
    "dfinity",
    "dfx",
    "canister",
    "candid",
    "motoko",
    "javascript",
    "typescript",
    "blockchain",
    "crypto",
    "nns",
    "network nervous system",
    "network-nervous-system"
  ]
}
