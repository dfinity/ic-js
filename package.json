{
  "name": "@dfinity/ic-js",
  "version": "71",
  "description": "A collection of library for interfacing with the Internet Computer.",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/utils",
    "packages/nns-proto",
    "packages/ledger-icp",
    "packages/ledger-icrc",
    "packages/nns",
    "packages/sns",
    "packages/cmc",
    "packages/ckbtc",
    "packages/ic-management",
    "packages/cketh",
    "packages/zod-schemas"
  ],
  "scripts": {
    "did": "scripts/compile-idl-js",
    "lint": "eslint --max-warnings 0 .",
    "format": "prettier --write .",
    "protoc": "bash ./scripts/update_proto.sh",
    "test": "tsc --project tsconfig.spec.json --noEmit && vitest",
    "test-all": "npm ci && npm run test --workspaces",
    "docs": "node scripts/docs.js && prettier --write packages/**/README.md",
    "build": "npm run build --workspaces",
    "size": "size-limit --json",
    "update:agent": "./scripts/update-agent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dfinity/ic-js.git"
  },
  "bugs": {
    "url": "https://github.com/dfinity/ic-js"
  },
  "devDependencies": {
    "@dfinity/eslint-config-oisy-wallet": "^0.2.0",
    "@size-limit/esbuild": "^11.2.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "esbuild": "^0.25.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "semver": "^7.6.3",
    "size-limit": "^11.2.0",
    "ts-protoc-gen": "^0.15.0",
    "tsdoc-markdown": "^1.3.0",
    "typescript": "^5.4.4",
    "vitest": "^3.1.3",
    "vitest-mock-extended": "^3.1.0"
  },
  "size-limit": [
    {
      "name": "@dfinity/ckbtc",
      "path": "./packages/ckbtc/dist/index.js",
      "limit": "9 kB",
      "gzip": true,
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@dfinity/utils"
      ]
    },
    {
      "name": "@dfinity/cketh",
      "path": "./packages/cketh/dist/index.js",
      "limit": "5 kB",
      "gzip": true,
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@dfinity/utils"
      ]
    },
    {
      "name": "@dfinity/cmc",
      "path": "./packages/cmc/dist/index.js",
      "limit": "2 kB",
      "gzip": true,
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@dfinity/utils"
      ]
    },
    {
      "name": "@dfinity/ledger-icrc",
      "path": "./packages/ledger-icrc/dist/index.js",
      "limit": "5 kB",
      "gzip": true,
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@dfinity/utils"
      ]
    },
    {
      "name": "@dfinity/ledger-icp",
      "path": "./packages/ledger-icp/dist/index.js",
      "limit": "10 kB",
      "gzip": true,
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@dfinity/utils"
      ]
    },
    {
      "name": "@dfinity/nns",
      "path": "./packages/nns/dist/index.js",
      "limit": "40 kB",
      "gzip": true,
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@dfinity/utils",
        "@dfinity/ledger-icp",
        "buffer"
      ]
    },
    {
      "name": "@dfinity/nns-proto",
      "path": "./packages/nns-proto/dist/index.js",
      "limit": "150 kB",
      "gzip": true
    },
    {
      "name": "@dfinity/sns",
      "path": "./packages/sns/dist/index.js",
      "limit": "20 kB",
      "gzip": true,
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@dfinity/utils",
        "@dfinity/ledger-icrc"
      ]
    },
    {
      "name": "@dfinity/utils",
      "path": "./packages/utils/dist/index.js",
      "limit": "10 kB",
      "gzip": true,
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal"
      ]
    },
    {
      "name": "@dfinity/zod-schemas",
      "path": "./packages/zod-schemas/dist/index.js",
      "limit": "2 kB",
      "gzip": true,
      "ignore": [
        "zod",
        "@dfinity/principal"
      ]
    },
    {
      "name": "@dfinity/ic-management",
      "path": "./packages/ic-management/dist/index.js",
      "limit": "4 kB",
      "gzip": true,
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@dfinity/utils"
      ]
    }
  ],
  "overrides": {
    "semver": "^7.6.3"
  }
}
