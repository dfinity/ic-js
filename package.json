{
  "name": "@dfinity/ic-js",
  "version": "2024.10.29-1130Z",
  "description": "A collection of library for interfacing with the Internet Computer.",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/utils",
    "packages/nns-proto",
    "packages/ledger-icp",
    "packages/ledger-icrc",
    "packages/nns",
    "packages/sns",
    "packages/cmc",
    "packages/ckbtc",
    "packages/ic-management",
    "packages/cketh"
  ],
  "scripts": {
    "did": "scripts/compile-idl-js",
    "lint": "eslint --max-warnings 0 .",
    "format": "prettier --write .",
    "protoc": "bash ./scripts/update_proto.sh",
    "test": "jest",
    "test-all": "npm ci && npm run test --workspaces",
    "docs": "node scripts/docs.js && prettier --write packages/**/README.md",
    "build": "npm run build --workspaces",
    "size": "size-limit --json",
    "update:agent": "./scripts/update-agent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dfinity/ic-js.git"
  },
  "bugs": {
    "url": "https://github.com/dfinity/ic-js"
  },
  "devDependencies": {
    "@size-limit/esbuild": "^11.1.2",
    "@size-limit/preset-small-lib": "^11.1.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.5",
    "@types/text-encoding": "^0.0.39",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "node-fetch": "^3.3.2",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "semver": "^7.6.0",
    "size-limit": "^11.1.2",
    "text-encoding": "^0.7.0",
    "ts-jest": "^29.1.2",
    "ts-protoc-gen": "^0.15.0",
    "tsdoc-markdown": "^0.6.2",
    "typescript": "^5.4.4"
  },
  "size-limit": [
    {
      "name": "@dfinity/ckbtc",
      "path": "./packages/ckbtc/dist/index.js",
      "limit": "9 kB",
      "gzip": true,
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@dfinity/utils"
      ]
    },
    {
      "name": "@dfinity/cketh",
      "path": "./packages/cketh/dist/index.js",
      "limit": "5 kB",
      "gzip": true,
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@dfinity/utils"
      ]
    },
    {
      "name": "@dfinity/cmc",
      "path": "./packages/cmc/dist/index.js",
      "limit": "2 kB",
      "gzip": true,
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@dfinity/utils"
      ]
    },
    {
      "name": "@dfinity/ledger-icrc",
      "path": "./packages/ledger-icrc/dist/index.js",
      "limit": "5 kB",
      "gzip": true,
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@dfinity/utils"
      ]
    },
    {
      "name": "@dfinity/ledger-icp",
      "path": "./packages/ledger-icp/dist/index.js",
      "limit": "20 kB",
      "gzip": true,
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@dfinity/utils",
        "@dfinity/nns-proto"
      ]
    },
    {
      "name": "@dfinity/nns",
      "path": "./packages/nns/dist/index.js",
      "limit": "40 kB",
      "gzip": true,
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@dfinity/utils",
        "@dfinity/nns-proto"
      ]
    },
    {
      "name": "@dfinity/nns-proto",
      "path": "./packages/nns-proto/dist/index.js",
      "limit": "150 kB",
      "gzip": true
    },
    {
      "name": "@dfinity/sns",
      "path": "./packages/sns/dist/index.js",
      "limit": "17 kB",
      "gzip": true,
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@dfinity/utils",
        "@dfinity/ledger-icrc"
      ]
    },
    {
      "name": "@dfinity/utils",
      "path": "./packages/utils/dist/index.js",
      "limit": "5 kB",
      "gzip": true,
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal"
      ]
    },
    {
      "name": "@dfinity/ic-management",
      "path": "./packages/ic-management/dist/index.js",
      "limit": "4 kB",
      "gzip": true,
      "ignore": [
        "@dfinity/agent",
        "@dfinity/candid",
        "@dfinity/principal",
        "@dfinity/utils"
      ]
    }
  ],
  "overrides": {
    "semver": "^7.6.0"
  }
}
