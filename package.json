{
  "name": "@dfinity/nns",
  "version": "0.1.9",
  "description": "A library for interfacing with the Internet Computer's Network Nervous System.",
  "main": "dist/cjs/index.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "rmdir": "node ./scripts/rmdir.mjs",
    "ts-declaration": "tsc --emitDeclarationOnly --outDir dist/types",
    "build": "npm run rmdir && node esbuild.mjs && npm run ts-declaration",
    "test": "jest",
    "doc": "typedoc ./src/index.ts",
    "lint": "eslint --max-warnings 0 .",
    "format": "prettier --write .",
    "update_proto": "bash ./scripts/update_proto.sh"
  },
  "dependencies": {
    "@dfinity/agent": "^0.10.2",
    "@dfinity/candid": "^0.10.2",
    "@dfinity/principal": "^0.10.2",
    "crc-32": "^1.2.0",
    "crc": "^3.8.0",
    "google-protobuf": "^3.19.1",
    "js-sha256": "^0.9.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@types/google-protobuf": "^3.15.5",
    "@types/jest": "^27.0.3",
    "@types/text-encoding": "^0.0.36",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "babel-jest": "^27.4.6",
    "babelify": "^10.0.0",
    "esbuild": "^0.14.14",
    "eslint": "^7.29.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.3.1",
    "jest-mock-extended": "^2.0.4",
    "prettier": "^2.5.0",
    "text-encoding": "^0.7.0",
    "ts-jest": "^27.0.7",
    "ts-protoc-gen": "^0.15.0",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.2",
    "whatwg-fetch": "^3.6.2"
  },
  "browserify": {
    "transform": [
      [
        "babelify"
      ]
    ]
  },
  "keywords": [
    "internet computer",
    "internet-computer",
    "ic",
    "dfinity",
    "dfx",
    "canister",
    "candid",
    "motoko",
    "javascript",
    "typescript",
    "blockchain",
    "crypto",
    "nns",
    "network nervous system",
    "network-nervous-system"
  ]
}
